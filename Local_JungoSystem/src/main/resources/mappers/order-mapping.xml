<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="usernamespace"> 
	
	<!-- order 은 mybatis-config.xml에서 정의한 Alias명 (com.gntech.dto.orderDTO) -->
	
	<!-- 전체리스트 -->
	<select id="ListIndex" resultType="order">
		SELECT * FROM order_tb ORDER BY id DESC;
	</select>
	
	<!-- 신청내역 조회 -->
	<select id="SelectIndex" resultType="order" parameterType="Integer">
		SELECT * FROM order_tb WHERE id = #{id}
	</select>
	
	<!-- 신청내역 수락 -->
	<update id="CheckYIndex" parameterType="Integer">
		UPDATE order_tb SET checkYN = 'Y', status = '진행중' WHERE id = #{ID}
	</update>
	
	<!-- 신청내역 거절 -->
	<update id="CheckNIndex" parameterType="Integer">
		UPDATE order_tb SET checkYN = 'N', status = '거절' WHERE id = #{ID}
	</update>
	
	
	
</mapper>






